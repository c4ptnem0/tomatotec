<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".FragmentManagementAdvice">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/levelTV"
                android:layout_marginTop="40dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Level here: Tiwas na" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/severeMessageTV"
                    android:layout_marginStart="10dp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:textSize="15sp"
                    android:text="lorem ipsum"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/severityPercentageTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:text="20%"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Management Advice"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cultural Control Measures"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/red"/>

            <TextView
                android:id="@+id/culturalMeasuresTV"
                android:layout_marginTop="4dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="lorem ipsum"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Biological Control Measures"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/red"/>

            <TextView
                android:id="@+id/biologicalMeasuresTV"
                android:layout_marginTop="4dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="lorem ipsum"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chemical Control Measures"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/red"/>

            <TextView
                android:id="@+id/chemicalMeasuresTV"
                android:layout_marginTop="4dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="lorem ipsum"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monitoring and IPM"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/red"/>

            <TextView
                android:id="@+id/monitoringMeasuresTV"
                android:layout_marginTop="4dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="lorem ipsum"
                android:textColor="@color/black"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"/>

    <ImageView
        android:id="@+id/closeBtn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_close"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="end"
        app:tint="@color/black" />
</FrameLayout>